#!/bin/bash
set -euo pipefail

date +"%c -- configure"

while true
do
    if [ "$#" -eq 0 ]; then break; fi
    case "$1" in
        --srcdir=*)
            SRCDIR="$(echo "$1" | sed -e 's/--srcdir=//')"
            shift
            ;;
        --srcdir)
            SRCDIR="$2"
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            echo "Not implemented: $1" >&2
            exit 1
            ;;
    esac
done

cp -v "${SRCDIR}"/Makefile .

echo "done."
